       e.preventDefault();
       $.get( "https://raw.githubusercontent.com/NeoResearch/examples-csharp/master/HelloWorld/HelloWorld.cs", function( data ) {
         $( "#code" )[0].value = data;
       });
     });
     $("#btn_cs_ex2").click(function (e) {
